/* 整体容器样式 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background-color: #f5f5f5;
  padding: 0 20rpx;
}


.content {
  width: 90%;
  background-color: white;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
}


/* 头像样式 */
.avatar-wrapper {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-bottom: 30rpx;
  background-color: #f0f0f0;
  border: 4rpx solid #e0e0e0;
}


.avatar {
  width: 100%;
  height: 100%;
  object-fit: cover;
}


/* 昵称输入框 */
.weui-input {
  width: 100%;
  background-color: #f8f8f8;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  text-align: center;
}


/* 登录按钮 */
.login-btn {
  width: 100%;
  margin-bottom: 30rpx;
  background-color: #07c160;
  color: white;
}


/* 功能按钮容器 */
.button-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}


/* 功能按钮样式 */
.click-btn, 
.order-btn, 
.admin-btn {
  width: 100%;
  margin: 10rpx 0;
  border-radius: 10rpx;
}


.click-btn {
  background-color: #07c160;
  color: white;
}


.order-btn {
  background-color: #1989fa;
  color: white;
}


.admin-btn {
  background-color: #ff976a;
  color: white;
}


/* 登录操作按钮 */
.login-actions {
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}


.login-actions button {
  width: 45%;
  font-size: 28rpx;
}


/* 响应式适配 */
@media (max-width: 375px) {
  .content {
    width: 95%;
    padding: 30rpx 20rpx;
  }


  .avatar-wrapper {
    width: 180rpx;
    height: 180rpx;
  }
}


/* 禁用状态样式 */
.login-btn:disabled {
  background-color: #b0b0b0;
  color: #f0f0f0;
}